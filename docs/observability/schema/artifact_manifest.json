{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "AEGIS Artifact Manifest",
  "type": "object",
  "required": ["task_id","generated_at"],
  "properties": {
    "task_id": {"type":"string"},
    "generated_at": {"type":"string","format":"date-time"},
    "artifacts": {
      "type":"array",
      "items": {
        "type":"object",
        "required":["path","type"],
        "properties":{
          "path":{"type":"string"},
          "type":{"type":"string"},
          "sha256":{"type":["string","null"]}
        }
      }
    }
  },
  "additionalProperties": true
}
